                                <li class="new-item dropdown">
                                    <a class="nav-link text-dark nav-link dropdown-toggle px-2 text-uppercase fw-bold" data-toggle="dropdown" asp-area="" asp-controller="Home" asp-action="Content">Content</a>
                                    <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                        style="width: 60px; background-color: #c69d99; height: 2px" />
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Item" asp-action="Index">Item</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </h6></p>
                               
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Information</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #c69d99; height: 2px" />
                        <p>
                            <a href="#!" class="text-dark">About Us</a>
                        </p>
                        <p>
