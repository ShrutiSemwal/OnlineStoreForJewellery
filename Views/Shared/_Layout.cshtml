@using Microsoft.AspNetCore.Http;
@using OnlineStoreForJewellery.Utility;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Store for Jewellery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    @RenderSection("Styles", required: false)
    @RenderSection("Styles1", required: false)
    @RenderSection("Styles2", required: false)
    @RenderSection("Styles3", required: false)
    @RenderSection("Styles4", required: false)
</head>
<body>
    <header>
        <nav class="navbar sticky-top fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 fixed-top " style="background-color: #87413f; position: fixed; top: 0; width: 100%;">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center mb-2 mb-lg-0" asp-area="" asp-controller="Home" asp-action="Index">Classic Ratna</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light nav-link dropdown-toggle px-2" data-toggle="dropdown" asp-area="" asp-controller="Home" asp-action="Collections">Collections</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" role="menu">
                                <li>  <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="All"> All Jewellery </a></li>
                                <li>  <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="New"> New Arrivals </a></li>

                                <li> <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="Under100">Under 100₹</a></li>

                                <li>  <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="CasualLook">The Casual look Collection</a></li>

                                <li>  <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="Vintage">The Vintage Collection</a></li>

                                <li>  <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="Oxidised">Trendy Oxidised Collection</a></li>

                                <li>   <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="Trinkets">The Sparkly Trinkets Collection</a></li>

                                <li> <a class="nav-link text-dark" asp-area="Collections" asp-controller="Home" asp-action="FunctionNight">The Function-night Collection</a></li>

                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-light nav-link dropdown-toggle px-2" data-toggle="dropdown" asp-area="" asp-controller="Home" asp-action="Account">My Account</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li> <a class="nav-link text-dark" asp-area="Cart" asp-controller="Home" asp-action="Wishlist"> My Wishlist</a></li>

                                <li>   <a class="nav-link text-dark" asp-area="Cart" asp-controller="Cart" asp-action="Orders">My Orders</a></li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        
                       

                    </ul>
                    <br>
                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                    </form>
                    <div class="text-end ">

                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                            <li>
                                <a class="nav-link text-light" asp-area="Cart" asp-controller="Cart" asp-action="Cart"><img src="https://www.freeiconspng.com/thumbs/cart-icon/basket-cart-icon-27.png" width="50px" height="40px" /></a>
                            </li>

                            @if (User.Identity.IsAuthenticated)
                            {

                                <a class="nav-link text-light"> Hello,@User.Identity.Name</a>
                                <li>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>

                            }

                            else
                            {
                                <li>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                </li>



                                <li>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Signup</a>
                                </li>
                            }
                        </ul>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start text-dark "
            style="background-color: #ECEFF1">
