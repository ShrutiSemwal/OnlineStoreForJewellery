                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold">Contact</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto"
                            style="width: 60px; background-color: #c69d99; height: 2px" />
                        <p><i class="fa fa-home mr-3"></i> Dehradun, Uttarakhand, India</p>
                        <p><i class="fa fa-envelope mr-3"></i> classicratna.inc@gmail.com</p>
